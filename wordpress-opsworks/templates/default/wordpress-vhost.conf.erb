<VirtualHost *:<%=@port || 80%>>
	ServerName <%=@name%>
	<% @aliases.each do |n| %>
	ServerAlias <%=n%>
	<% end %>
	DocumentRoot <%=@docroot%>

	LogFormat "%{Host}i %{X-Forwarded-For}i %P %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\"" combined
	CustomLog /var/log/apache2/other_vhosts_access.log vhost_combined

	Alias /wp-content <%=@content_dir%>
	Alias /wp-plugin <%=@plugin_dir%>

	RewriteLogLevel 1 
	RewriteLog /var/log/apache2/rewrite_log

	<Directory <%=@docroot%>>
		AllowOverride all
		Order allow,deny
		Allow from all
		Options -Indexes FollowSymLinks
	</Directory>
</VirtualHost>

